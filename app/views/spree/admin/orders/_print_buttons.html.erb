<% if @order.completed_at? %>
  <% buttons = PrintInvoice::Config[:buttons] || "invoice"
     buttons = buttons.split(",").collect{|b| b.strip } %>
  <%  buttons.each do |button| %>
    <%= button_link_to(t(button), admin_print_order_path(@order, :pdf, :template => button), :icon => 'icon-print') %>
  <% end %>
<% end %>
